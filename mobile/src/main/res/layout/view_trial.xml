                android:text="1"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rack_two_holder"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_below="@+id/rack_one_holder"
